<div id="<%= dom_id category %>" class="flex flex-row justify-between items-center w-1/3 bg-white p-4 rounded-lg shadow-md mt-6">
  <span class="text-lg text-gray-800"><%= category.name %></span>

  <div class="flex flex-row mt-2 gap-3">
    <%= link_to t(".edit"), edit_category_path(category),
      class: "bg-teal-600 text-white px-3 py-1 rounded hover:bg-teal-900 transition-colors duration-300 ease-in-out" %>

    <%= link_to t(".delete"), category_path(category),
      data: { turbo_method: :delete, turbo_confirm: t("common.confirm") },
      class: "bg-red-400 text-white px-3 py-1 rounded hover:bg-red-900 transition-colors duration-300 ease-in-out" %>
  </div>
</div>
