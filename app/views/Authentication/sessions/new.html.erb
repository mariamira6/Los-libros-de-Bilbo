<h1 class="text-2xl font-bold mb-6 text-center mt-16">Inicio de sesión</h1>

  <%= form_with(url: sessions_path, class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow-md space-y-6") do |form| %>
    <div>
      <%= form.label :login, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :login, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-teal-200" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-teal-200" %>
    </div>

    <div class="text-center">
      <%= form.submit "Iniciar sesión", class: "mt-4 bg-teal-600 text-white px-4 py-2 rounded hover:bg-teal-900 transition-colors duration-300 ease-in-out" %>
    </div>
  <% end %>
